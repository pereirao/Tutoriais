@model IEnumerable<Funcionario>
@{
    ViewBag.Title = "Lista de Funcionários";
}

    <div class="card-deck">
        @foreach (Funcionario funcionario in Model)
        {
            <div class="card">
                <img class="card-img-top" src="~/images/no_image.jpg" asp-append-version="true" alt="Foto do funcionário" />
                <div class="card-body">
                    <div class="card-title"><h5>@funcionario.Nome</h5></div>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="detalhes" asp-route-id="@funcionario.Id" class="btn btn-primary"><i class="fas fa-search"></i></a>
                    <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </div>
            </div>
        }
    </div>

@section Scripts {
    <script src="~/js/home/index.js"></script>
}
